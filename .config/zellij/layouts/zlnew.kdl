session_name "zlnew"
attach_to_session true

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zjstatus"
        }
        children
    }

    // ────────────── Tab 1: dotfiles ──────────────
    tab name="dotfiles" {
        pane {
            cwd "~/www/zlnew/dotfiles"
            command "nvim"
        }
    }

    // ────────────── Tab 2: portfolio ──────────────
    tab name="portfolio" {
        pane {
            cwd "~/www/zlnew/neo-portfolio"
            command "nvim"
        }
    }

    // ────────────── Tab 3: aprizqyhub.my.id ──────────────
    tab name="aprizqyhub.my.id" {
        pane {
            cwd "~/www/zlnew/aprizqyhub.my.id"
            command "nvim"
        }
    }

    // ────────────── Tab 4: system-monitor ──────────────
    tab name="system-monitor" {
        pane {
            cwd "~/www/zlnew/system-monitor"
            command "nvim"
        }
    }

    // ────────────── Tab 5: Others ──────────────
    tab name="others" {
        pane {
            cwd "~/www/zlnew"
        }
    }
}
