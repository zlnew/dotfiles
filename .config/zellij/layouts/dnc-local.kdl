layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="zjstatus"
        }
    }

    // ────────────── Tab 1: core-api ──────────────
    tab name="1. core-api" {
        pane {
            cwd "~/www/duanaga/core-api"
            command "fish"
        }
    }

    // ────────────── Tab 2: dragon-bridge ──────────────
    tab name="2. dragon-bridge" {
        pane {
            cwd "~/www/duanaga/dragon-bridge"
            command "fish"
        }
    }

    // ────────────── Tab 3: customer-portal ──────────────
    tab name="3. customer-portal" {
        pane {
            cwd "~/www/duanaga/portal_customer"
            command "fish"
        }
    }

    // ────────────── Tab 4: PostgreSQL CLI ──────────────
    tab name="4. pgcli" {
        pane {
            cwd "~/www/duanaga/core-api"
            command "fish"
            args "-c" "pgcli -u postgres -d dnc"
        }
    }

    // ────────────── Tab 5: Background Jobs ──────────────
    tab name="5. background-jobs" {
        pane split_direction="vertical" {
          pane {
              cwd "~/www/duanaga/core-api"
              command "fish"
              args "-c" "php artisan horizon"
          }
          pane split_direction="horizontal" {
            pane {
              cwd "~/www/duanaga/dragon-bridge"
              command "fish"
              args "-c" "npm run dev"
            }
            pane {
              cwd "~/www/duanaga/portal_customer"
              command "fish"
              args "-c" "sleep 2 && npm run dev"
            }
          }
        }
    }
}

