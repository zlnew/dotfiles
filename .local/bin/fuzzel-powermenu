#!/usr/bin/env bash

ACTION=$(printf "Poweroff\nReboot\nSuspend\nHibernate" | \
fuzzel --dmenu --prompt "Power > " --lines=4 --width=30)

case "$ACTION" in
  "Poweroff") systemctl poweroff ;;
  "Reboot") systemctl reboot ;;
  "Suspend") systemctl suspend ;;
  "Hibernate") systemctl hibernate ;;
  *) exit 0 ;;
esac

