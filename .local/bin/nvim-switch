#!/usr/bin/env bash

CONFIG_DIR="$HOME/www/dotfiles/.config/nvim-variants"
LINK_PATH="$HOME/.config/nvim"

configs=($(ls -1 "$CONFIG_DIR"))

if [ ${#configs[@]} -eq 0 ]; then
  echo "‚ùå No configs found in $CONFIG_DIR"
  exit 1
fi

echo "üéõÔ∏è  Pick your Neovim config:"
for i in "${!configs[@]}"; do
  printf "  %s) %s\n" "$((i+1))" "${configs[$i]}"
done

read -p "Enter number: " choice
index=$((choice - 1))
selected="${configs[$index]}"

if [[ -z "$selected" ]]; then
  echo "‚ùå Invalid choice."
  exit 1
fi

echo "üßπ Cleaning old Neovim data..."
rm -rf "$LINK_PATH"
rm -rf "$HOME/.local/share/nvim"
rm -rf "$HOME/.local/state/nvim"
rm -rf "$HOME/.cache/nvim"

echo "üîó Linking $selected ‚Üí ~/.config/nvim"
ln -s "$CONFIG_DIR/$selected" "$LINK_PATH"

echo "üöÄ Launching Neovim..."
nvim "${@:1}"


