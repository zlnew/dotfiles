#!/usr/bin/env bash
STATE_FILE="/tmp/niri-column-width"

if [[ -f "$STATE_FILE" ]]; then
  CURRENT=$(cat "$STATE_FILE")
else
  CURRENT="100"
fi

if [[ "$CURRENT" == "100" ]]; then
  niri msg action set-column-width 50%
  echo "50" > "$STATE_FILE"
else
  niri msg action set-column-width 100%
  echo "100" > "$STATE_FILE"
fi

